<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/map_activity_padding"
    android:paddingRight="@dimen/map_activity_padding"
    android:paddingTop="@dimen/map_activity_padding"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MenuActivity"
    android:background="#ffb3c8ff">

    <TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="32dp"
        android:textColor="@color/title_color"
        android:id="@+id/textView"
        android:background="#FF000000" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/hano_main_picture"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/go_to_map_btn_text"
            android:id="@+id/mapButton"
            android:onClick="goToMap"
            android:background="#ff74b7ff"
            android:layout_marginTop="@dimen/main_button_padding"
            android:layout_marginBottom="@dimen/main_button_padding"
            android:shadowColor="#FF000000"
            android:singleLine="false"
            android:textStyle="bold"
            style="@style/Base.TextAppearance.AppCompat.Button" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Ferry Departures"
            android:id="@+id/boat_times_button"
            android:onClick="onBoatTimesButtonClick"
            android:background="#ff74b7ff"
            android:padding="@dimen/main_button_padding"
            android:layout_marginTop="@dimen/main_button_padding"
            android:layout_marginBottom="@dimen/main_button_padding"
            android:textStyle="bold"
            android:shadowColor="#FF000000"
            style="@style/Base.TextAppearance.AppCompat.Button" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="HANÃ–.SE"
            android:id="@+id/hano_site_button"
            android:background="#ff74b7ff"
            android:padding="@dimen/main_button_padding"
            android:onClick="onHanoSeClickButton"
            android:layout_marginTop="@dimen/main_button_padding"
            android:layout_marginBottom="@dimen/main_button_padding"
            android:textStyle="bold"
            android:shadowColor="#FF000000"
            style="@style/Base.TextAppearance.AppCompat.Button" />

    </LinearLayout>

</RelativeLayout>
